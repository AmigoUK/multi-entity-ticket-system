# Template .gitignore file from MAMP PRO for WordPress projects

# On macOS you should ignore .DS_Store files.
.DS_Store

# Ignore everything in the WP root except the "wp-content" directory.
/*
!.gitignore
!wp-content/
 
# Ignore everything in the "wp-content" directory, except the "plugins" and "themes" directories.
wp-content/*
!wp-content/plugins/
!wp-content/themes/
 
# Ignore everything in the "plugins" directory except METS.
wp-content/plugins/*
!wp-content/plugins-backup/
!wp-content/plugins-backup/multi-entity-ticket-system-emergency-backup/

# Include important METS files
!wp-content/plugins/multi-entity-ticket-system/
 
# Ignore everything in the "themes" directory.
# wp-content/themes/*

# Exempt my-theme from this general ignore rule.
# !wp-content/themes/my-theme/

# Include documentation and test files
!*.md
!README.md
!METS*.md
!run-tests.sh
!tests/
!mets-*.php
!mets-*.html
!mets-*.sh
!multi-entity-ticket-system/

# Test generated files
tests/vendor/
tests/composer.lock
tests/e2e/node_modules/
tests/e2e/package-lock.json
tests/e2e/test-results/
tests/e2e/test-summary.json

# Security - exclude sensitive files
wp-config.php
*.sql
*.log
/wp-content/debug.log
/wp-content/mets-secure-key.php
