#!/bin/bash
#
# Qwen Code Reviewer Agent Wrapper
# Simplified interface for code reviews

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
AGENT_DIR="$SCRIPT_DIR/.claude/agents"
PYTHON_PATH="/Applications/MAMP/bin/python/python3.10.15/bin/python3"

# Check if Python is available
if ! command -v python3 &> /dev/null && ! command -v "$PYTHON_PATH" &> /dev/null; then
    echo "Error: Python 3 is required but not found."
    echo "Please install Python 3 or adjust the PYTHON_PATH in this script."
    exit 1
fi

# Use available Python
if command -v python3 &> /dev/null; then
    PYTHON_CMD="python3"
else
    PYTHON_CMD="$PYTHON_PATH"
fi

# Show help
if [[ "$1" == "-h" || "$1" == "--help" ]]; then
    echo "Qwen Code Reviewer Agent"
    echo "Usage: ./review [options] <diff_file>"
    echo ""
    echo "Options:"
    echo "  -h, --help     Show this help message"
    echo "  -v, --verbose  Enable verbose output"
    echo "  --project      Specify project root directory"
    echo ""
    echo "Examples:"
    echo "  ./review changes.diff"
    echo "  ./review --project /path/to/project changes.diff"
    echo "  ./review -v changes.diff"
    exit 0
fi

# Parse arguments
VERBOSE=false
PROJECT_ROOT="."
DIFF_FILE=""

while [[ $# -gt 0 ]]; do
    case $1 in
        -v|--verbose)
            VERBOSE=true
            shift
            ;;
        --project)
            PROJECT_ROOT="$2"
            shift 2
            ;;
        -*)
            echo "Unknown option: $1"
            echo "Use --help for usage information."
            exit 1
            ;;
        *)
            DIFF_FILE="$1"
            shift
            ;;
    esac
done

# Check if diff file is provided
if [[ -z "$DIFF_FILE" ]]; then
    echo "Error: No diff file provided."
    echo "Usage: ./review changes.diff"
    echo "Use --help for more information."
    exit 1
fi

# Check if diff file exists
if [[ ! -f "$DIFF_FILE" ]]; then
    echo "Error: Diff file '$DIFF_FILE' not found."
    exit 1
fi

# Run the code reviewer agent
echo "Running Qwen Code Reviewer Agent..."
echo "Diff file: $DIFF_FILE"
echo "Project root: $PROJECT_ROOT"
echo ""

# Execute the code reviewer agent
if [[ "$VERBOSE" == true ]]; then
    "$PYTHON_CMD" "$AGENT_DIR/code_reviewer_agent.py" "$DIFF_FILE" "$PROJECT_ROOT"
else
    "$PYTHON_CMD" "$AGENT_DIR/code_reviewer_agent.py" "$DIFF_FILE" "$PROJECT_ROOT" 2>/dev/null
fi

# Check exit status
if [[ $? -eq 0 ]]; then
    echo ""
    echo "Code review completed successfully."
    echo "Check the generated report file for detailed analysis."
else
    echo ""
    echo "Code review failed. Check the error output above."
    exit 1
fi